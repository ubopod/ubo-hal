[Unit]
Description=Ubo LED Service
Before=hardware-test.service

[Service]
User=root
Environment=PYTHONPATH=$UBO_VENV_PATH/lib/python3.11/site-packages/
ExecStart=$UBO_VENV_PATH/bin/python3 $UBO_SDK_PATH/rgb_ring/rgb_ring_manager.py
KillMode=control-group
Restart=on-failure
RestartPreventExitStatus=255
Type=simple
RuntimeDirectory=ubo/
WorkingDirectory=$UBO_SDK_PATH
RuntimeDirectoryMode=0755

[Install]
WantedBy=multi-user.target
